// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet-postgres
{
  "name": "Simple Financial App",
  "dockerComposeFile": "compose.yml",
  "service": "sfa.app",
  "workspaceFolder": "/workspaces/sfa",
  "features": {
    "ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {
      "setLocale": true,
      "theme": "robbyrussell",
      "plugins": "git docker",
      "desiredLocale": "en_US.UTF-8 UTF-8"
    },
    "ghcr.io/jsburckhardt/devcontainer-features/bat:1": {},
    "ghcr.io/thediveo/devcontainer-features/lazygit:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "aaron-bond.better-comments",
        "ms-vscode.vscode-typescript-next",
        "pkief.material-icon-theme",
        "christian-kohler.path-intellisense",
        "bradlc.vscode-tailwindcss",
        "gruntfuggly.todo-tree",
        "ms-vsliveshare.vsliveshare",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [
    3000,
    5432,
    1025,
    8025
  ],
  "postCreateCommand": "find . -type d -name bin -exec rm -rf {} + && find . -type d -name obj -exec rm -rf {} + && dotnet clean && dotnet restore",
  "remoteUser": "root"
}